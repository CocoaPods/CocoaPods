#!/usr/bin/env ruby

if $0 == __FILE__
  ENV['BUNDLE_GEMFILE'] = File.expand_path('../../Gemfile', __FILE__)
  require "rubygems"
  require "bundler/setup"
  $:.unshift File.expand_path('../../lib', __FILE__)
end

if (ENV['CP_STDOUT_SYNC'] == 'TRUE')
  STDOUT.sync = true
end

require 'cocoapods'

Pod::Command.run(ARGV)
